{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Characters",
  "description": "Characters in the game.",
  "type": "object",
  "properties": {
    "list": {
      "description": "The list of characters",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The unique identifier for a character",
            "type": "integer"
          },
          "name": {
            "description": "The name of the character",
            "type": "string"
          },
          "description": {
            "description": "The description of the character",
            "type": "string"
          },
          "moves": {
            "description": "The IDs of moves available for the character",
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "atk-base": {
            "description": "The base attack value for the character.",
            "type": "integer"
          },
          "atk-scale": {
            "description": "The attack value multiplier for the character.",
            "type": "integer"
          },
          "hp-base": {
            "description": "The base health value for the character.",
            "type": "integer"
          },
          "hp-scale": {
            "description": "The health value multiplier for the character.",
            "type": "integer"
          },
          "type": {
            "description": "The type of the character. Affects attack effectiveness.",
            "type": "string",
            "enum": [
              "normal",
              "water",
              "fire",
              "grass"
            ]
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "moves",
          "atk-base",
          "atk-scale",
          "hp-base",
          "hp-scale",
          "type"
        ]
      }
    }
  },
  "required": [
    "list"
  ]
}