{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Character",
  "description": "A character in the game.",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for a character",
      "type": "integer"
    },
    "name": {
      "description": "The name of the character",
      "type": "string"
    },
    "moves": {
      "description": "The IDs of moves available for the character",
      "type": "array",
      "items": {
        "type": "integer"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "atk": {
      "description": "The attack value multiplier for the character.",
      "type": "integer"
    },
    "hp": {
      "description": "The health value for the character.",
      "type": "integer"
    },
    "type": {
      "description": "The type of the character. Affects attack effectiveness.",
      "type": "string",
      "enum": [
        "normal",
        "water",
        "fire",
        "grass"
      ]
    }
  },
  "required": [
    "id",
    "name",
    "moves",
    "atk",
    "hp",
    "type"
  ]
}