{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Characters and Moves",
  "description": "Characters in the game and their possible moves.",
  "type": "object",
  "properties": {
    "chars": {
      "description": "The list of characters",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The unique identifier for a character",
            "type": "integer"
          },
          "name": {
            "description": "The name of the character",
            "type": "string"
          },
          "moves": {
            "description": "The IDs of moves available for the character",
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "atk": {
            "description": "The attack value multiplier for the character.",
            "type": "integer"
          },
          "hp": {
            "description": "The health value for the character.",
            "type": "integer"
          },
          "element": {
            "description": "The element of the character",
            "type": "string",
            "enum": [
              "normal",
              "water",
              "fire",
              "grass"
            ]
          }
        },
        "required": [
          "id",
          "name",
          "moves",
          "atk",
          "hp",
          "element"
        ]
      }
    },
    "moves": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The unique identifier for a move",
            "type": "integer"
          },
          "name": {
            "description": "The name of the move",
            "type": "string"
          },
          "description": {
            "description": "The description for the move",
            "type": "string"
          },
          "atk": {
            "description": "The base attack value for the move",
            "type": "integer"
          },
          "scale": {
            "description": "The attack value multiplier for the move",
            "type": "integer"
          },
          "element": {
            "description": "The element of the move",
            "type": "string",
            "enum": [
              "normal",
              "water",
              "fire",
              "grass"
            ]
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "atk",
          "scale",
          "element"
        ]
      }
    }
  },
  "required": [
    "chars",
    "moves"
  ]
}